{
    "compilerOptions": {
      "target": "es5",                   // Specify ECMAScript target version
      "module": "commonjs",              // Specify module code generation
      "strict": true,                    // Enable all strict type-checking options
      "esModuleInterop": true,           // Enable compatibility with CommonJS modules
      "skipLibCheck": true,              // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in filenames
      "baseUrl": "./",                   // Base directory for resolving non-relative module names
      "paths": {
        "*": ["src/*"]
      },
      "jsx": "react"                     // Specify JSX code generation (for React projects)
    },
    "include": [
      "src/**/*", "global.d.ts"          // Include all files in the src directory
    ],
    "exclude": [
      "node_modules",                    // Exclude the node_modules directory
      "build"                            // Exclude the build directory
    ]
  }